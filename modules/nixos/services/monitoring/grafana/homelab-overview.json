{
  "id": null,
  "uid": "homelab-overview",
  "title": "Homelab Overview",
  "tags": ["overview", "homelab", "system"],
  "style": "dark",
  "timezone": "browser",
  "refresh": "30s",
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "panels": [
    {
      "id": 1,
      "title": "System Uptime",
      "type": "stat",
      "gridPos": {"h": 4, "w": 6, "x": 0, "y": 0},
      "targets": [
        {
          "expr": "time() - node_boot_time_seconds",
          "refId": "A"
        }
      ],
      "options": {
        "reduceOptions": {
          "values": false,
          "calcs": ["lastNotNull"],
          "fields": ""
        },
        "colorMode": "value",
        "graphMode": "none",
        "justifyMode": "auto",
        "orientation": "auto"
      },
      "fieldConfig": {
        "defaults": {
          "unit": "s",
          "thresholds": {
            "steps": [
              {"color": "red", "value": 0},
              {"color": "yellow", "value": 3600},
              {"color": "green", "value": 86400}
            ]
          }
        }
      }
    },
    {
      "id": 2,
      "title": "Active Alerts",
      "type": "stat",
      "gridPos": {"h": 4, "w": 6, "x": 6, "y": 0},
      "targets": [
        {
          "expr": "count(ALERTS{alertstate=\"firing\"}) OR vector(0)",
          "refId": "A"
        }
      ],
      "options": {
        "reduceOptions": {
          "values": false,
          "calcs": ["lastNotNull"],
          "fields": ""
        },
        "colorMode": "background",
        "graphMode": "none",
        "justifyMode": "auto",
        "orientation": "auto"
      },
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "steps": [
              {"color": "green", "value": 0},
              {"color": "yellow", "value": 1},
              {"color": "red", "value": 5}
            ]
          }
        }
      }
    },
    {
      "id": 4,
      "title": "CPU Usage",
      "type": "gauge",
      "gridPos": {"h": 6, "w": 6, "x": 0, "y": 4},
      "targets": [
        {
          "expr": "100 - (avg by (instance) (irate(node_cpu_seconds_total{mode=\"idle\"}[5m])) * 100)",
          "refId": "A"
        }
      ],
      "options": {
        "showThresholdLabels": false,
        "showThresholdMarkers": true
      },
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "min": 0,
          "max": 100,
          "thresholds": {
            "steps": [
              {"color": "green", "value": 0},
              {"color": "yellow", "value": 60},
              {"color": "red", "value": 80}
            ]
          }
        }
      }
    },
    {
      "id": 5,
      "title": "Memory Usage",
      "type": "gauge",
      "gridPos": {"h": 6, "w": 6, "x": 6, "y": 4},
      "targets": [
        {
          "expr": "100 * (1 - ((node_memory_MemAvailable_bytes) / (node_memory_MemTotal_bytes)))",
          "refId": "A"
        }
      ],
      "options": {
        "showThresholdLabels": false,
        "showThresholdMarkers": true
      },
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "min": 0,
          "max": 100,
          "thresholds": {
            "steps": [
              {"color": "green", "value": 0},
              {"color": "yellow", "value": 70},
              {"color": "red", "value": 90}
            ]
          }
        }
      }
    },
    {
      "id": 6,
      "title": "Network I/O",
      "type": "timeseries",
      "gridPos": {"h": 6, "w": 6, "x": 12, "y": 4},
      "targets": [
        {
          "expr": "rate(node_network_receive_bytes_total{device!~\"lo|veth.*|docker.*|br-.*\"}[5m])",
          "legendFormat": "RX - {{ device }}",
          "refId": "A"
        },
        {
          "expr": "rate(node_network_transmit_bytes_total{device!~\"lo|veth.*|docker.*|br-.*\"}[5m]) * -1",
          "legendFormat": "TX - {{ device }}",
          "refId": "B"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "Bps",
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "linear",
            "fillOpacity": 20,
            "showPoints": "never"
          }
        }
      }
    },
    {
      "id": 7,
      "title": "System Load",
      "type": "timeseries",
      "gridPos": {"h": 6, "w": 6, "x": 18, "y": 4},
      "targets": [
        {
          "expr": "node_load1",
          "legendFormat": "1m",
          "refId": "A"
        },
        {
          "expr": "node_load5",
          "legendFormat": "5m",
          "refId": "B"
        },
        {
          "expr": "node_load15",
          "legendFormat": "15m",
          "refId": "C"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "smooth",
            "fillOpacity": 10,
            "showPoints": "never"
          }
        }
      }
    },
    {
      "id": 8,
      "title": "ZFS Pool Health",
      "type": "stat",
      "gridPos": {"h": 5, "w": 8, "x": 0, "y": 10},
      "targets": [
        {
          "expr": "zfs_pool_state",
          "legendFormat": "{{ pool }}",
          "refId": "A"
        }
      ],
      "options": {
        "reduceOptions": {
          "values": false,
          "calcs": ["lastNotNull"],
          "fields": ""
        },
        "colorMode": "background",
        "graphMode": "none",
        "justifyMode": "auto",
        "orientation": "horizontal"
      },
      "fieldConfig": {
        "defaults": {
          "mappings": [
            {"options": {"0": {"text": "FAULTED", "color": "red"}}, "type": "value"},
            {"options": {"0.5": {"text": "DEGRADED", "color": "yellow"}}, "type": "value"},
            {"options": {"1": {"text": "ONLINE", "color": "green"}}, "type": "value"}
          ],
          "thresholds": {
            "steps": [
              {"color": "red", "value": 0},
              {"color": "yellow", "value": 0.5},
              {"color": "green", "value": 1}
            ]
          }
        }
      }
    },
    {
      "id": 9,
      "title": "ZFS Pool Capacity",
      "type": "bargauge",
      "gridPos": {"h": 5, "w": 8, "x": 8, "y": 10},
      "targets": [
        {
          "expr": "100 * (zfs_pool_used_bytes / zfs_pool_capacity_bytes)",
          "legendFormat": "{{ pool }}",
          "refId": "A"
        }
      ],
      "options": {
        "reduceOptions": {
          "values": false,
          "calcs": ["lastNotNull"],
          "fields": ""
        },
        "orientation": "horizontal",
        "displayMode": "gradient",
        "showUnfilled": true
      },
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "min": 0,
          "max": 100,
          "thresholds": {
            "steps": [
              {"color": "green", "value": 0},
              {"color": "yellow", "value": 70},
              {"color": "red", "value": 85}
            ]
          }
        }
      }
    },
    {
      "id": 10,
      "title": "Critical Mount Points",
      "type": "bargauge",
      "gridPos": {"h": 5, "w": 8, "x": 16, "y": 10},
      "targets": [
        {
          "expr": "100 - (100 * (mount_available_bytes / (mount_available_bytes + (node_filesystem_size_bytes{mountpoint=~\"/srv|/var/lib|/mnt/media|/mnt/downloads\"} - node_filesystem_avail_bytes{mountpoint=~\"/srv|/var/lib|/mnt/media|/mnt/downloads\"}))))",
          "legendFormat": "{{ mount }}",
          "refId": "A"
        }
      ],
      "options": {
        "reduceOptions": {
          "values": false,
          "calcs": ["lastNotNull"],
          "fields": ""
        },
        "orientation": "horizontal",
        "displayMode": "gradient",
        "showUnfilled": true
      },
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "min": 0,
          "max": 100,
          "thresholds": {
            "steps": [
              {"color": "green", "value": 0},
              {"color": "yellow", "value": 70},
              {"color": "red", "value": 85}
            ]
          }
        }
      }
    },
    {
      "id": 11,
      "title": "Running Containers",
      "type": "stat",
      "gridPos": {"h": 4, "w": 4, "x": 0, "y": 15},
      "targets": [
        {
          "expr": "count(container_last_seen{name=~\".+\"})",
          "refId": "A"
        }
      ],
      "options": {
        "reduceOptions": {
          "values": false,
          "calcs": ["lastNotNull"],
          "fields": ""
        },
        "colorMode": "value",
        "graphMode": "area",
        "justifyMode": "auto",
        "orientation": "auto"
      },
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "steps": [
              {"color": "green", "value": 0}
            ]
          }
        }
      }
    },
    {
      "id": 12,
      "title": "Container CPU Usage",
      "type": "bargauge",
      "gridPos": {"h": 4, "w": 10, "x": 4, "y": 15},
      "targets": [
        {
          "expr": "topk(3, rate(container_cpu_usage_seconds_total{name=~\".+\"}[5m]) * 100)",
          "legendFormat": "{{ name }}",
          "refId": "A"
        }
      ],
      "options": {
        "reduceOptions": {
          "values": false,
          "calcs": ["lastNotNull"],
          "fields": ""
        },
        "orientation": "horizontal",
        "displayMode": "gradient"
      },
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "thresholds": {
            "steps": [
              {"color": "green", "value": 0},
              {"color": "yellow", "value": 50},
              {"color": "red", "value": 80}
            ]
          }
        }
      }
    },
    {
      "id": 13,
      "title": "Container Memory Usage",
      "type": "bargauge",
      "gridPos": {"h": 4, "w": 10, "x": 14, "y": 15},
      "targets": [
        {
          "expr": "topk(3, container_memory_usage_bytes{name=~\".+\"})",
          "legendFormat": "{{ name }}",
          "refId": "A"
        }
      ],
      "options": {
        "reduceOptions": {
          "values": false,
          "calcs": ["lastNotNull"],
          "fields": ""
        },
        "orientation": "horizontal",
        "displayMode": "gradient"
      },
      "fieldConfig": {
        "defaults": {
          "unit": "bytes",
          "thresholds": {
            "steps": [
              {"color": "green", "value": 0},
              {"color": "yellow", "value": 1073741824},
              {"color": "red", "value": 2147483648}
            ]
          }
        }
      }
    },
    {
      "id": 18,
      "title": "Active Downloads",
      "type": "stat",
      "gridPos": {"h": 4, "w": 6, "x": 12, "y": 25},
      "targets": [
        {
          "expr": "transmission_torrent_active",
          "refId": "A"
        }
      ],
      "options": {
        "reduceOptions": {
          "values": false,
          "calcs": ["lastNotNull"],
          "fields": ""
        },
        "colorMode": "value",
        "graphMode": "area",
        "justifyMode": "auto",
        "orientation": "auto"
      },
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "steps": [
              {"color": "green", "value": 0},
              {"color": "yellow", "value": 5},
              {"color": "orange", "value": 10}
            ]
          }
        }
      }
    },
    {
      "id": 20,
      "title": "Loki Active Streams",
      "type": "stat",
      "gridPos": {"h": 4, "w": 6, "x": 0, "y": 29},
      "targets": [
        {
          "expr": "loki_ingester_streams",
          "refId": "A"
        }
      ],
      "options": {
        "reduceOptions": {
          "values": false,
          "calcs": ["lastNotNull"],
          "fields": ""
        },
        "colorMode": "value",
        "graphMode": "area",
        "justifyMode": "auto",
        "orientation": "auto"
      },
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "steps": [
              {"color": "green", "value": 0},
              {"color": "yellow", "value": 50000},
              {"color": "red", "value": 80000}
            ]
          }
        }
      }
    },
    {
      "id": 21,
      "title": "Loki Ingestion Rate",
      "type": "stat",
      "gridPos": {"h": 4, "w": 6, "x": 6, "y": 29},
      "targets": [
        {
          "expr": "rate(loki_distributor_lines_received_total[5m])",
          "refId": "A"
        }
      ],
      "options": {
        "reduceOptions": {
          "values": false,
          "calcs": ["lastNotNull"],
          "fields": ""
        },
        "colorMode": "value",
        "graphMode": "area",
        "justifyMode": "auto",
        "orientation": "auto"
      },
      "fieldConfig": {
        "defaults": {
          "unit": "lps",
          "thresholds": {
            "steps": [
              {"color": "green", "value": 0}
            ]
          }
        }
      }
    },
    {
      "id": 22,
      "title": "SMART Disk Health",
      "type": "stat",
      "gridPos": {"h": 4, "w": 6, "x": 12, "y": 29},
      "targets": [
        {
          "expr": "smartctl_device_smart_healthy",
          "legendFormat": "{{ device }}",
          "refId": "A"
        }
      ],
      "options": {
        "reduceOptions": {
          "values": false,
          "calcs": ["lastNotNull"],
          "fields": ""
        },
        "colorMode": "background",
        "graphMode": "none",
        "justifyMode": "auto",
        "orientation": "horizontal"
      },
      "fieldConfig": {
        "defaults": {
          "mappings": [
            {"options": {"0": {"text": "FAILING", "color": "red"}}, "type": "value"},
            {"options": {"1": {"text": "HEALTHY", "color": "green"}}, "type": "value"}
          ],
          "thresholds": {
            "steps": [
              {"color": "red", "value": 0},
              {"color": "green", "value": 1}
            ]
          }
        }
      }
    }
  ]
}
